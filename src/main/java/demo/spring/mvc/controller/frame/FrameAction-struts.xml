<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="frame" namespace="/frame" extends="default">

        <default-interceptor-ref name="authStack" />

        <action name="index" class="frameAction" method="index">
            <result name="success">index.ftl</result>
        </action>

        <action name="mainMenu" class="frameAction" method="mainMenu">
            <result name="success">mainMenu.ftl</result>
        </action>

        <action name="welcome" class="frameAction" method="welcome">
            <result name="success">welcome.ftl</result>
        </action>

        <action name="heartbeat" class="frameAction" method="heartbeat">
            <result name="success" type="json" />
        </action>

        <action name="viewModifyPassword" class="frameAction" method="viewModifyPassword">
            <result name="success">password.ftl</result>
        </action>

        <action name="modifyPassword" class="frameAction" method="modifyPassword">
            <result name="success" type="json">
                <param name="includeProperties">actionErrors.*, actionMessages.*</param>
                <param name="ignoreHierarchy">false</param>
            </result>
        </action>

    </package>

</struts>
